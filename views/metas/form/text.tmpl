<div class="qor-field">
  <div class="mdl-textfield mdl-textfield--full-width mdl-js-textfield">
    <label class="qor-field__label" for="{{.InputId}}">
      {{meta_label .Meta}}
    </label>

    <div class="qor-field__show">{{.Value}}</div>

    <div class="qor-field__edit">
      <textarea class="mdl-textfield__input qor-js-autoheight" id="{{.InputId}}" name="{{.InputName}}" rows="1"
      {{if or (and (eq .Context.Action "edit")  (not (has_update_permission .Meta)))  (and (eq .Context.Action "new") (not (has_create_permission .Meta)))  }}disabled{{end}}>{{.Value}}</textarea>
    </div>
  </div>
</div>
